<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.2.xsd">

    <changeSet author="carlosthe19916@sistcoop.com" id="1.0.0.Final">
        <createTable tableName="MIGRATION_MODEL">
            <column name="ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="VERSION" type="VARCHAR(36)"/>
        </createTable>
        <createTable tableName="ORGANIZATION">
            <column name="ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="ADDITIONAL_ACCOUNT_ID" type="VARCHAR(255)"/>
            <column name="ENAMBLED" type="BOOLEAN"/>
            <column name="NAME" type="VARCHAR(255)"/>
            <column name="PARTY_IDENTIFICATION_ID" type="VARCHAR(255)"/>
            <column name="PARTY_NAME" type="VARCHAR(255)"/>
            <column name="REGISTRATION_NAME" type="VARCHAR(255)"/>
            <column name="POSTAL_ADDRESS_ID" type="VARCHAR(36)"/>
        </createTable>
        <createTable tableName="POSTAL_ADDRESS">
            <column name="ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="city_name" type="VARCHAR(255)"/>
            <column name="city_subdivision_name" type="VARCHAR(255)"/>
            <column name="country_identification_code" type="VARCHAR(255)"/>
            <column name="country_sub_entity" type="VARCHAR(255)"/>
            <column name="district" type="VARCHAR(255)"/>
            <column name="street_name" type="VARCHAR(255)"/>
        </createTable>

        <addPrimaryKey columnNames="ID" constraintName="MIGRATION_MODELPK" tableName="MIGRATION_MODEL"/>
        <addPrimaryKey columnNames="ID" constraintName="ORGANIZATIONPK" tableName="ORGANIZATION"/>
        <addPrimaryKey columnNames="ID" constraintName="POSTAL_ADDRESSPK" tableName="POSTAL_ADDRESS"/>

        <addUniqueConstraint columnNames="NAME" constraintName="UC_ORGANIZATIONNAME_COL" tableName="ORGANIZATION"/>

        <addForeignKeyConstraint baseColumnNames="POSTAL_ADDRESS_ID" baseTableName="ORGANIZATION"
                                 constraintName="FK_tb8m5o17rmorqsbkt4dd2tt05" deferrable="false"
                                 initiallyDeferred="false" referencedColumnNames="ID"
                                 referencedTableName="POSTAL_ADDRESS"/>
    </changeSet>

</databaseChangeLog>