	<modelVersion>4.0.0</modelVersion>

	<artifactId>testsuite-integration</artifactId>
	<name>Openfact Testsuite Integration</name>
	<packaging>war</packaging>

	<properties>
		<failOnMissingWebXml>false</failOnMissingWebXml>
		<version.wildfly-swarm>1.0.0.Final</version.wildfly-swarm>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.wildfly.swarm</groupId>
				<artifactId>wildfly-swarm-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>package</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<mainClass>org.openfact.testsuite.Main</mainClass>
				</configuration>
			</plugin>
		</plugins>
	</build>

